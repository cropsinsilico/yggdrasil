{
  "general": [
    "chevron",
    {
      "cross-python_{{ target_platform }}": {
        "method": "conda_recipe",
        "flags": {
          "build": true,
          "build_only": true,
          "cross_build": true
        }
      }
    },
    {
      "{{ compiler('c') }}": {
        "method": "conda_recipe",
        "flags": {
          "build": true,
          "build_only": true
        }
      }
    },
    {
      "{{ compiler('cxx') }}": {
        "method": "conda_recipe",
        "flags": {
          "build": true,
          "build_only": true
        }
      }
    },
    "deprecation",
    "flask",
    {
      "git": {
        "method": "conda"
      }
    },
    {
      "matplotlib": {
        "flags": {
          "from_env": "MATPLOTLIB"
        },
        "options": [
          {
            "name": "matplotlib-base",
            "method": "conda"
          },
          {
            "name": "matplotlib",
            "method": "pip"
          }
        ]
      }
    },
    {
      "numpy>=1.13.0": {
        "host": true,
        "flags": {
          "from_env": "NUMPY",
          "method_in_setup": "conda",
          "build": true
        }
      }
    },
    "pandas",
    {
      "pip": {
        "method": "conda_recipe",
        "host": true,
        "host_only": true
      }
    },
    "psutil",
    "pyperf",
    {
      "python": {
        "method": "conda_recipe",
        "host": true,
        "flags": {
          "build": true,
          "cross_build": true
        }
      }
    },
    "pyyaml",
    "pyzmq",
    "requests",
    {
      "scipy": {
        "flags": {
          "method_in_setup": "conda"
        }
      }
    },
    "six",
    "toml",
    "unyt",
    "GitPython",
    {
      "sysv_ipc": {
        "os": "unix",
        "host": true
      }
    }
  ],
  "extras": {
    "c": {
      "description": "Dependencies required to compile and run models written in C/C++ as part of yggdrasil integrations",
      "requires_extras": [
        {
          "name": "zmq",
          "os": "win"
        }
      ],
      "requirements": [
        {
          "cmake": {
            "method": "conda",
            "os": "unix"
          }
        },
        {
          "make": {
            "method": "conda",
            "os": "unix"
          }
        },
        {
          "{{ compiler('c') }}": {
            "method": "conda_recipe"
          }
        },
        {
          "{{ compiler('cxx') }}": {
            "method": "conda_recipe"
          }
        },
        {
          "compiler-rt": {
            "method": "conda",
            "os": "osx"
          }
        }
      ]
    },
    "fortran": {
      "description": "Dependencies required to compile and run models written in Fortran as part of yggdrasil integrations",
      "requires_extras": [
        "c"
      ],
      "requirements": [
        {
          "gfortran": [
            {
              "name": "{{ compiler('fortran') }}",
              "method": "conda_recipe",
              "os": "unix"
            },
            {
              "name": "fortran-compiler",
              "os": "unix",
              "method": "conda"
            },
            {
              "name": "m2w64-gcc-fortran",
              "os": "win",
              "method": "conda",
              "add": [
                "m2w64-toolchain_win-64"
              ]
            },
            {
              "name": "gfortran",
              "method": "apt"
            },
            {
              "name": "gfortran",
              "method": "brew",
              "add": [
                {
                  "name": "gcc",
                  "flags": {
                    "reinstall": true
                  }
                }
              ]
            },
            {
              "name": "mingw",
              "method": "choco"
            }
          ]
        }
      ]
    },
    "r": {
      "description": "Dependencies required to run models written in R as part of yggdrasil integrations",
      "requirements": [
        {
          "r-base": {
            "executable": "R",
            "options": [
              {
                "method": "conda",
                "host": true
              },
              {
                "method": "apt",
                "add": [
                  "r-base-dev"
                ]
              },
              {
                "name": "r",
                "method": "brew"
              }
            ]
          }
        },
        {
          "r-bit64": [
            {
              "method": "conda",
              "host": true
            },
            {
              "method": "cran"
            }
          ]
        },
        {
          "r-r6": [
            {
              "method": "conda",
              "host": true
            },
            {
              "method": "cran"
            }
          ]
        },
        {
          "r-reticulate": [
            {
              "method": "conda",
              "host": true
            },
            {
              "method": "cran"
            }
          ]
        },
        {
          "r-zeallot": [
            {
              "method": "conda",
              "host": true
            },
            {
              "method": "cran"
            }
          ]
        },
        {
          "r-units": [
            {
              "method": "conda",
              "host": true
            },
            {
              "method": "cran"
            }
          ]
        },
        {
          "udunits": [
            {
              "name": "libudunits2-dev",
              "method": "apt"
            },
            {
              "name": "udunits",
              "method": "brew"
            },
            {
              "method": "skip",
              "os": "win"
            },
            {
              "method": "conda_skip"
            }
          ]
        }
      ]
    },
    "zmq": {
      "description": "Dependencies required to run models using ZeroMQ sockets for communication in C/C++/Fortran",
      "requirements": [
        {
          "czmq": [
            {
              "method": "conda",
              "host": true
            },
            {
              "name": "libczmq-dev",
              "method": "apt"
            },
            {
              "method": "brew",
              "flags": {
                "from_src_on_travis": true
              }
            },
            {
              "method": "vcpkg"
            }
          ]
        },
        {
          "lz4": [
            {
              "name": "lz4",
              "method": "conda",
              "host": true
            },
            {
              "name": "lz4",
              "method": "pip_skip"
            }
          ]
        },
        {
          "zeromq": [
            {
              "method": "conda",
              "host": true
            },
            {
              "name": "libzmq3-dev",
              "method": "apt"
            },
            {
              "name": "zmq",
              "method": "brew",
              "flags": {
                "from_src_on_travis": true
              }
            },
            {
              "method": "vcpkg"
            }
          ]
        }
      ]
    },
    "julia": {
      "description": "Dependencies required to run models written in R as part of yggdrasil integrations",
      "requirements": [
        {
          "julia": {
            "executable": "julia",
            "options": [
              {
                "method": "brew"
              },
              {
                "method": "choco"
              },
              {
                "name": "juliaup",
                "method": "conda",
                "host": true
              }
            ]
          }
        }
      ]
    },
    "mpi": {
      "description": "Dependencies required to run integrations as MPI parallel jobs",
      "requirements": [
        "mpi4py",
        {
          "mpi": [
            {
              "name": "mpich",
              "os": "linux",
              "method": "conda"
            },
            {
              "name": "openmpi",
              "os": "osx",
              "method": "conda"
            },
            {
              "name": "msmpi",
              "os": "win",
              "method": "conda"
            },
            {
              "name": "openmpi-bin",
              "method": "apt",
              "add": [
                "libopenmpi-dev"
              ]
            },
            {
              "name": "openmpi",
              "method": "brew",
              "flags": {
                "method_validate": "conda_supp"
              },
              "os": "osx"
            }
          ]
        }
      ]
    },
    "omp": {
      "description": "Dependencies required to run integrations that use OpenMP",
      "requirements": [
        {
          "libomp": [
            {
              "name": "libomp-dev",
              "method": "apt"
            },
            {
              "method": "brew",
              "add": [
                "llvm"
              ]
            },
            {
              "method": "skip",
              "os": "win"
            },
            {
              "method": "conda_skip"
            }
          ]
        }
      ]
    },
    "rmq": {
      "description": "Dependencies required to run integrations with RabbitMQ communication",
      "requirements": [
        "pika>=1.0.0"
      ]
    },
    "sbml": {
      "description": "Dependencies required to run SBML models as part of yggdrasil integrations",
      "requirements": [
        {
          "name": "libroadrunner",
          "method": "pip"
        }
      ]
    },
    "lpy": {
      "description": "Dependencies required to run LPy models as part of yggdrasil integrations",
      "requirements": [
        {
          "name": "lpy",
          "method": "conda",
          "add": [
            "boost==1.66.0"
          ],
          "flags": {
            "install_flags": [
              "-c",
              "openalea"
            ],
            "not_in_recipe": true,
            "not_in_txt": true
          }
        }
      ]
    },
    "images": {
      "description": "Dependencies required to perform I/O on common image files.",
      "requirements": [
        "pillow",
        {
          "name": "ghostscript",
          "method": "conda"
        }
      ]
    },
    "seq": {
      "description": "Dependencies required to handle sequence (nucleotide/protein) I/O",
      "requirements": [
        "biopython",
        {
          "name": "pysam",
          "method": "pip",
          "os": "unix"
        }
      ]
    },
    "pytorch": {
      "description": "Dependencies required to run PyTorch models as part of yggdrasil integrations",
      "requirements": [
        {
          "name": "torchvision",
          "options": [
