          "name": "pytorch",
          "options": [
            {
              "name": "torch",
              "method": "pip"
            },
            {
              "name": "pytorch",
              "method": "conda",
              "os": "unix"
            },
            {
              "method": "conda_skip",
              "os": "win"
            }
          ]
        }
